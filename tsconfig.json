{
  "compilerOptions": {
    /* 路径映射 */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* 编译选项 */
    "target": "ESNext",
    "module": "NodeNext",                 // ✅ 关键修改，支持 import.meta
    "moduleResolution": "NodeNext",       // ✅ 跟 module 保持一致
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* 类型检查松紧度 */
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "strictNullChecks": false,

    /* Vite 相关 */
    "types": ["vite/client"],
    "jsx": "react-jsx"
  },
  "include": [
    "src",
    "vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
